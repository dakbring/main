<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/device_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp">

    <com.demo.dakbring.maindemo.widget.ColorChangeableIcon
        android:id="@+id/device_remove"
        android:layout_width="@dimen/block_width"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:scaleType="centerInside"
        app:colorSelector="@drawable/btn_press_bg_selector"
        android:src="@drawable/icon_delete" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/block_width">

        <TextView
            android:id="@+id/device_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:gravity="center"
            android:padding="20dp"
            tools:text="28589" />

        <TextView
            android:id="@+id/device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:gravity="center"
            android:padding="20dp"
            tools:text="Dakbring" />
    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>